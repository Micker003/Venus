int  checkforobstacle(int x, int y,int *direction){
    // check if there's any obstacle ahead
    // using the distance sensors, check for the height of the obstacle
    // if less than 30 cm find the color of the bot using the color sensor

    char cmd;
    char cmd3;
    char cmd2;
    int height;
    char color;
    
    //return 0 if theres obstacle else return 1

    printf("Is there obstacle ahead?\n ");
    scanf(" %c",&cmd);

    if(cmd == 'y'){
        //check for the crater
        printf("Crater/border ahead?\n");
        scanf(" %c", &cmd3);
        if (cmd3 == 'y'){
            // send data
            // send the coordinates
            printf("Robot turned 90 degrees right\n");
            *direction = *direction + 1;
            return 0;
        }
        printf("height of the object in cm?\n");
        scanf(" %d", &height);
        if ( height >= 30){
            printf("HILL detected\n");
            // here we can send the data to the visualisation
            // send coordinates x and y
        }
        else{
            printf("Color of the sample\n");
            // send data to visualisation
            // send coordinates
            scanf(" %c", &color);
        }
        printf("Robot turned 90 degrees right\n");
        *direction = *direction + 1;
        return 0;

        
    } 
    else{

        printf("Empty Space\n");
        return 1;
        
    }
    
}

void move(int *xpoint, int *ypoint, int direction){

    if (direction == 0){
        *ypoint = *ypoint + 1;
        return;
    }
    else if (direction == 1){
        *xpoint = *xpoint + 1;
    }
    else if (direction == 2){
        *ypoint = *ypoint - 1;
    }
    else if (direction == 3){
        *xpoint = *xpoint - 1;
    }
    else{
        if(direction % 4 == 0){
            *ypoint = *ypoint + 1;
             return;
        }
        if( direction % 4 == 1){
            *xpoint = *xpoint + 1;
        }
        if (direction % 4 == 2){
            *ypoint = *ypoint - 1;
        }
        if(direction % 4 == 3){
            *xpoint = *xpoint - 1;
        }
    }

}


point *addtolist(int x,int y,point *list){
    // insert tail logic
    
    point *current = list;
    if(list == NULL){
        list = malloc(sizeof(point));
        list->x = x;
        list->y = y;
        list->next = NULL;
        return list;
    }
    else{
        while(current->next != NULL){
            current = current->next;
        }
        point *newnode = malloc(sizeof(point));
        newnode->x = x;
        newnode->y= y;
        newnode->next = NULL;
        current->next =newnode;
        
        return list;
    }
    
}

void printmap(){
      for(int i=0;i<19;i++){
            if(i == 9){
                for(int k = 0;k<45;k++){
                    printf("-");
                }
                printf("\n");
            }
            else{
                for(int j = 0; j<20;j++){
                printf(" ");
                }
                printf("|\n");
            }
        }
}

int checklist(int x,int y,point *list){
    
    point *current = list;
    int counter = 0;
    
    while(current != NULL){
        if ((current->x == x)&&(current->y==y)){
            counter = counter + 1;
        }
        current = current->next;
    }
    
    if(counter>2){
        return 1;
    }
    return 0;
}
 


int main (void){
    
    
    int checker = 0;
    int check_coordinates = 0;
    point *list = NULL;
    int current_xpoint = 0;
    int current_ypoint = 0;
    char map[20][20];
    
    list = addtolist(current_xpoint,current_ypoint,list);
    
    int direction = 0; 
    printf(" start position is %d %d\n",current_xpoint,current_ypoint);

    while(1){
        checker = checkforobstacle(current_xpoint,current_ypoint, &direction);
        if(checker == 1){
            if(list != NULL){
            check_coordinates = checklist(current_xpoint,current_ypoint,list);
             }
             if(check_coordinates == 1){
                //Robot turns 90 degrees to the right
                direction = direction + 1;
             }
            move(&current_xpoint,&current_ypoint,direction);
            list = addtolist(current_xpoint,current_ypoint,list);
             
        }
        printf("Current position %d %d\n",current_xpoint,current_ypoint);
        for(int i=0;i<19;i++){
            if(i == 9){
                for(int k = 0;k<45;k++){
                    printf("-");
                }
                printf("\n");
            }
            else{
                for(int j = 0; j<20;j++){
                printf(" ");
                }
                printf("|\n");
            }
        }
        
  
}

return 0;

